const BASE = (import.meta.env.VITE_API_URL ?? "http://localhost:8787").replace(/\/+$/,"");

async function j(req: Promise<Response>) {
  const r = await req;
  const ct = r.headers.get("content-type") || "";
  const data = ct.includes("application/json") ? await r.json().catch(() => ({})) : {};
  if (!r.ok) throw new Error(data?.error || data?.message || `HTTP ${r.status}`);
  return data;
}

export async function apiHealth(): Promise<boolean> {
  try { await j(fetch(`${BASE}/health`, { method: "GET" })); return true; }
  catch { return false; }
}

