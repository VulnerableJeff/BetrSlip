export async function apiParlay(body: { legs: Array<{ odds: number }> }) {
  try { return await j(fetch(`${BASE}/parlay`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify(body),
  })); }
  catch {
    // simple local math fallback
    const pLeg = (o:number)=> (o>0 ? 100/(o+100) : (-o)/(100+(-o)));
    const win = body.legs.reduce((acc,l)=>acc*pLeg(l.odds),1);
    return {
      ok: true,
      winPercent: +(win*100).toFixed(2),
      fairDecimal: +((1/win)||0).toFixed(2),
      fairAmerican: Math.round(win>0.5 ? -(win/(1-win))*100 : ((1-win)/win)*100),
      kelly: +( ((win*0.9 - (1-win)) / 0.9) * 100 ).toFixed(2) // assume 10% vig
    };
  }
}
